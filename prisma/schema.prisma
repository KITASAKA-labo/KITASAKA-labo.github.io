generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_P_URL")
}

model news {
  id        Int    @id @default(autoincrement())
  day       String
  news      String
  img       String
  url       String
}

model study {
  id        Int    @id @default(autoincrement())
  category  String
  year      String
  title     String
  content   String
  img       String
}

model work {
  id        Int    @id @default(autoincrement())
  category  String
  event     String
}

model member {
  id        Int    @id @default(autoincrement())
  graduation String
  number  String
  name       String
}